<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eetac.dsa.minim2android.SecondActivity">

    <TextView
        android:id="@+id/textid_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="ID: " />

    <TextView
        android:id="@+id/id_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textid_detall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/textnom_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_toRightOf="@+id/id_detall"
        android:textSize="15sp"
        android:text="Nom: " />

    <TextView
        android:id="@+id/nom_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textnom_detall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="" />


    <TextView
        android:id="@+id/texttipus_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textid_detall"
        android:textSize="15sp"
        android:text="Tipus: " />

    <TextView
        android:id="@+id/tipus_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/id_detall"
        android:layout_toRightOf="@+id/texttipus_detall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/textpuntuacio_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textnom_detall"
        android:layout_toRightOf="@+id/id_detall"
        android:textSize="15sp"
        android:text="Puntuació: " />

    <TextView
        android:id="@+id/puntuacio_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nom_detall"
        android:layout_toRightOf="@+id/textpuntuacio_detall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="" />



    <TextView
        android:id="@+id/textdescripcio_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/texttipus_detall"
        android:textSize="15sp"
        android:text="Descripció: " />

    <TextView
        android:id="@+id/descripcio_detall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textdescripcio_detall"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_centerInParent="true"
        android:onClick="onClick"/>


</RelativeLayout>
