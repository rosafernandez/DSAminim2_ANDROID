<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_third"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    tools:context="edu.upc.eetac.dsa.minim2android.ThirdActivity">

    <TextView
        android:id="@+id/textnom_new"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Nom: " />

    <EditText
        android:id="@+id/nom_new"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textnom_new"
        android:layout_alignBaseline="@+id/textnom_new"
        android:hint="Escriu el nom"
        android:text="" />


    <TextView
        android:id="@+id/texttipus_new"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textnom_new"
        android:text="Tipus: " />

    <EditText
        android:id="@+id/tipus_new"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nom_new"
        android:layout_toRightOf="@+id/texttipus_new"
        android:layout_alignBaseline="@+id/texttipus_new"
        android:hint="Escriu el tipus (Director, Professor o Alumne)" />


    <TextView
        android:id="@+id/textdescripcio_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/texttipus_new"
        android:text="Descripció: " />

    <EditText
        android:id="@+id/descripcio_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/textdescripcio_new"
        android:hint="Escriu la descripció" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Afegir Etakemon"
        android:layout_centerInParent="true"
        android:onClick="crearRegistre"/>

</RelativeLayout>
